<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.network.client.ClientController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0" style="-fx-background-color: #353535;" text="CHAT" textAlignment="CENTER" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Bold" size="42.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox fx:id="vbDisplay" alignment="TOP_CENTER" fillWidth="false" maxWidth="400.0" minWidth="400.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="CENTER" maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0" style="-fx-background-color: #353535;" BorderPane.alignment="CENTER">
         <children>
            <JFXTextField fx:id="tfMessage" focusColor="WHITE" maxHeight="30.0" maxWidth="300.0" minHeight="30.0" minWidth="300.0" prefHeight="30.0" prefWidth="300.0" promptText="Message..." style="-fx-text-fill: WHITE; -fx-prompt-text-fill: #4d4d4d;" />
            <JFXButton onAction="#sendMessage" style="-fx-background-color: WHITE;" text="SEND" textFill="#363636" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

